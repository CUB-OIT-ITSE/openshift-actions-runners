ARG BASE_IMG=ghcr.io/cub-oit-itse/runner:latest
FROM $BASE_IMG AS k8s-tools-runner

USER root

ARG HELM_VERSION="3.13.1"
ENV HELM_VERSION=${HELM_VERSION}

ARG KN_VERSION="1.11.2"
ENV KN_VERSION=${KN_VERSION}

ARG OC_VERSION="stable-4.14"
ENV OC_VERSION=${OC_VERSION}

ARG TKN_VERSION="0.32.2"
ENV TKN_VERSION=${TKN_VERSION}

ARG YQ_VERSION="4.35.1"
ENV YQ_VERSION=${YQ_VERSION}

COPY ./install-tools.sh .

RUN ./install-tools.sh
RUN rm ./install-tools.sh

USER $UID
